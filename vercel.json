{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/chat.py": {
      "runtime": "python3.11",
      "maxDuration": 10
    },
    "api/health.py": {
      "runtime": "python3.11",
      "maxDuration": 5
    }
  },
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/api/chat"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    }
  ]
}
